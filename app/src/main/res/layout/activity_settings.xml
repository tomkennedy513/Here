<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0EAF2">
    tools:context="edu.villanova.tkenned8.here.SettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/SettingsText"
        android:text="SETTINGS"
        android:textSize="30dp"
        android:layout_marginTop="15px"
        android:layout_marginLeft="10px"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/enterMessageText"
        android:text="CUSTOMIZE MESSAGE"
        android:textSize="23dp"
        android:layout_marginTop="140px"
        android:layout_marginLeft="10px"
        />

    <EditText
        android:id="@+id/text"
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:inputType="text"
        android:layout_marginTop="110dp"
        android:hint="Enter Message Here"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/changeDistanceText"
        android:text="ALERT DISTANCES"
        android:textSize="23dp"
        android:layout_marginTop="460px"
        android:layout_marginLeft="10px"
        />

        <CheckBox android:id="@+id/radio_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="300dp"
            android:text="1 minute"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/radio_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="345dp"
            android:text="5 minutes"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/radio_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="392dp"
            android:layout_marginBottom="5dp"
            android:text="10 minutes"
            android:onClick="onCheckboxClicked"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#41BEE6"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"></android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>